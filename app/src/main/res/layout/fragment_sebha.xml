<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".sebhaFragment"
    android:background="@drawable/mainbackground">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="115dp"
        android:layout_height="162dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/masabha"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:id="@+id/reset"/>
    <TextView
        android:id="@+id/mentionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="5dp"
        android:text="التسبيحة"
        android:textColor="#fac14c"
        android:textSize="22dp"
        android:fontFamily="@font/reemkufi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/mention_counter"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:background="#fff"
        android:textStyle="bold"
        android:textSize="25sp"
        android:gravity="center"
        tools:text="7"
        android:textColor="#fac14c"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentionText" />

    <TextView
        android:id="@+id/mentionTotalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="228dp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/reemkufi"
        android:text="مجموع التسبيحات"
        android:textColor="#fac14c"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.499" />

    <TextView
        android:id="@+id/totalMentionCounter"
        android:layout_width="90dp"
        android:layout_height="42dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:background="#fff"
        android:textStyle="bold"
        android:textSize="25sp"
        tools:text="7"
        android:textColor="#fac14c"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mentionTotalText" />
    <android.support.v7.widget.AppCompatSpinner
        android:layout_width="110dp"
        android:layout_height="30dp"
        android:layout_marginBottom="8dp"
        android:background="#fff"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="350dp"
        android:popupTheme="@style/MyDialog"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.321"
        android:id="@+id/spinner"
        android:entries="@array/spinner_arr"
        android:prompt="@string/choose_prompt"

        />



</android.support.constraint.ConstraintLayout>